.table-responsive
    table#dataTableAdminTeacher.table.table-bordered.table-striped.table-hover.dataTable.js-exportable
        thead
            tr
                th Nº
                th Apellidos y Nombres
                th Adelantos
                th Librería y uniformes
                th Canastones
                th Día del padre
                th Cumpleaños Pasanaku
                th Uniforme
                th Total
        tfoot
            tr
                th Nº
                th Apellidos y Nombres
                th Adelantos
                th Librería y uniformes
                th Canastones
                th Día del padre
                th Cumpleaños Pasanaku
                th Uniforme
                th Total
        tbody
            -var n = 1
            each worker in teachers
                tr(id=`discountRow-${worker.id}`)
                    td=n
                    td=`${(worker.person.paternalLastName) ? worker.person.paternalLastName : ""} ${(worker.person.maternalLastName) ? worker.person.maternalLastName : ""} ${(worker.person.firstName) ? worker.person.firstName : ""} ${(worker.person.secondName) ? worker.person.secondName : ""}`
                    td(id=`value0-${worker.id}`, data-id=worker.id, contenteditable='true').only-numbers.editable-admin-teacher
                    td(id=`value1-${worker.id}`, data-id=worker.id, contenteditable='true').only-numbers.editable-admin-teacher
                    td(id=`value2-${worker.id}`, data-id=worker.id, contenteditable='true').only-numbers.editable-admin-teacher
                    td(id=`value3-${worker.id}`, data-id=worker.id, contenteditable='true').only-numbers.editable-admin-teacher
                    td(id=`value4-${worker.id}`, data-id=worker.id, contenteditable='true').only-numbers.editable-admin-teacher
                    td(id=`value5-${worker.id}`, data-id=worker.id, contenteditable='true').only-numbers.editable-admin-teacher
                    td(id=`total-${worker.id}`)=0
                -n++
            each worker in admins
                tr(id=`discountRow-${worker.id}`)
                    td=n
                    td=`${(worker.person.paternalLastName) ? worker.person.paternalLastName : ""} ${(worker.person.maternalLastName) ? worker.person.maternalLastName : ""} ${(worker.person.firstName) ? worker.person.firstName : ""} ${(worker.person.secondName) ? worker.person.secondName : ""}`
                    td(id=`value0-${worker.id}`, data-id=worker.id, contenteditable='true').only-numbers.editable-admin-teacher
                    td(id=`value1-${worker.id}`, data-id=worker.id, contenteditable='true').only-numbers.editable-admin-teacher
                    td(id=`value2-${worker.id}`, data-id=worker.id, contenteditable='true').only-numbers.editable-admin-teacher
                    td(id=`value3-${worker.id}`, data-id=worker.id, contenteditable='true').only-numbers.editable-admin-teacher
                    td(id=`value4-${worker.id}`, data-id=worker.id, contenteditable='true').only-numbers.editable-admin-teacher
                    td(id=`value5-${worker.id}`, data-id=worker.id, contenteditable='true').only-numbers.editable-admin-teacher
                    td(id=`total-${worker.id}`)=0
                -n++