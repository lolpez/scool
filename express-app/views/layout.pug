doctype html
html
	head
		meta(charset='UTF-8')
		meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no', name='viewport')
		title=title
		// Custom Css
		link(href='/page/style.css', rel='stylesheet')
		// Google Fonts
		
		// Bootstrap Core Css
		link(href='/plugins/bootstrap/css/bootstrap.css', rel='stylesheet')
		// Bootstrap Select Css
		link(href='/plugins/bootstrap-select/css/bootstrap-select.css', rel='stylesheet')
		// Waves Effect Css
		link(href='/plugins/node-waves/waves.css', rel='stylesheet')
		// Animation Css
		link(href='/plugins/animate-css/animate.css', rel='stylesheet')
		// Sweetalert Css
		link(href='/plugins/sweetalert/sweetalert.css', rel='stylesheet')
		// JQuery DataTable Css
		link(href='/plugins/jquery-datatable/skin/bootstrap/css/dataTables.bootstrap.css', rel='stylesheet')
		// Custom Css
		link(href='/css/style.css', rel='stylesheet')
		// AdminBSB Themes. You can choose a theme from css/themes instead of get all themes
		link(href='/css/themes/all-themes.css', rel='stylesheet')
		block styles
	body.theme-blue
		// Page Loader
		.page-loader-wrapper
			.loader
				.preloader
					.spinner-layer.pl-blue
						.circle-clipper.left
							.circle
						.circle-clipper.right
							.circle
				p Cargando
		// #END# Page Loader
		// Overlay For Sidebars
		.overlay
		// #END# Overlay For Sidebars
		// Search Bar
		.search-bar
			.search-icon
				i.material-icons search
			input(type='text', placeholder='START TYPING...')
			.close-search
				i.material-icons close
		// #END# Search Bar
		// Top Bar
		nav.navbar
			.container-fluid
				.navbar-header
					a.bars(href='javascript:void(0);')
					a.navbar-brand(href='javascript:void(0);') SERN
		// #Top Bar
		section
			// Left Sidebar
			aside#leftsidebar.sidebar
				// User Info
				.user-info
					.image
						img(src='/images/user.png', width='48', height='48', alt='User')
					.info-container
						.name(data-toggle='dropdown', aria-haspopup='true', aria-expanded='false') Administrador
						.email admin@gmail.com
						.btn-group.user-helper-dropdown
							i.material-icons(data-toggle='dropdown', aria-haspopup='true', aria-expanded='true') keyboard_arrow_down
							ul.dropdown-menu.pull-right
								li
									a(href='javascript:void(0);')
										i.material-icons person
										| Mi perfil
								li.divider(role='separator')
								li
									a(href='javascript:void(0);')
										i.material-icons input
										| Salir
				// #User Info
				// Menu
				.menu
					ul.list
						li
							a(href='/')
								i.material-icons home
								span Inicio
						li
							a.menu-toggle(href='javascript:void(0);')
								i.material-icons face
								span Personal
							ul.ml-menu
								li
									a(href='/worker/docente')
										i.material-icons school
										span Docente
								li
									a(href='/worker/administrativo')
										i.material-icons work
										span Administrativo								
								li
									a(href='/worker/soporte')
										i.material-icons mood
										span Soporte
								li
									a(href='/worker')
										i.material-icons people
										span Ver todos
						li
							a(href='/template')
								i.material-icons assignment
								span Planillas
						li
							a(href='/')
								i.material-icons settings
								span Configuraciones
				// #Menu
				// Footer
				.legal
					.copyright
						| Â© 2018 - 2019 
						a(href='javascript:void(0);') Developed by - Lolpezoft
					.version
						b Version: 
						|  0.0.1
				// #Footer			
		section.content
			.container-fluid
				block content
		// Jquery Core Js
		script(src='/plugins/jquery/jquery.min.js')
		// Bootstrap Core Js
		script(src='/plugins/bootstrap/js/bootstrap.js')
		// Select Plugin Js
		script(src='/plugins/bootstrap-select/js/bootstrap-select.js')
		// Slimscroll Plugin Js
		script(src='/plugins/jquery-slimscroll/jquery.slimscroll.js')
		// Waves Effect Plugin Js
		script(src='/plugins/node-waves/waves.js')
		// Bootstrap Notify Plugin Js
		script(src='/plugins/bootstrap-notify/bootstrap-notify.js')
		//SweetAlert Plugin Js
		script(src='/plugins/sweetalert/sweetalert.min.js')
		// Jquery DataTable Plugin Js
		script(src='/plugins/jquery-datatable/jquery.dataTables.js')
		script(src='/plugins/jquery-datatable/skin/bootstrap/js/dataTables.bootstrap.js')
		script(src='/plugins/jquery-datatable/extensions/export/dataTables.buttons.min.js')
